//---------------------------------------------------------------------------------------------------------------//

model Pencapaian {
  id              Int           @id @default(autoincrement())
  judul           String
  deskripsi       String
  tanggal         DateTime
  studentProfil   StudentProfil @relation(fields: [studentProfilId], references: [id])
  studentProfilId Int
}

model Mapel {
  id         Int          @id @default(autoincrement())
  type       MapelType
  namaMapel  String
  jurusanId  Int?
  Jurusan    Jurusan?     @relation(fields: [jurusanId], references: [id])
  MapelKelas MapelKelas[]
}

//---------------------------------------------------------------------------------------------------------------//

model Users {
  id              Int            @id @default(autoincrement())
  username        String         @unique
  password        String
  studentProfilId Int?
  studentProfil   StudentProfil? @relation(fields: [studentProfilId], references: [id])
  role            Role?
}

enum Role {
  STUDENT
  ADMIN
  ORANGTUA
}

enum TransactionType {
  DEBIT
  KREDIT
}

enum SemesterType {
  GANJIL
  GENAP
}

enum MapelType {
  UMUM
  JURUSAN
}
